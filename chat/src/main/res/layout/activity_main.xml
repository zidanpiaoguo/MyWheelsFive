<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lzy.chat.MainActivity">


    <Button
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆用户test1"/>


    <Button
        android:id="@+id/login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆用户test2"/>



    <Button
        android:id="@+id/open1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开用户test1与客服的聊天界面"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/open2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开用户test2与客服的聊天界面"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/login0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆客服test0"
        android:layout_marginTop="10dp"/>




    <Button
        android:id="@+id/open0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开客服test0的聊天列表"
        android:layout_marginTop="10dp"/>



</LinearLayout>
